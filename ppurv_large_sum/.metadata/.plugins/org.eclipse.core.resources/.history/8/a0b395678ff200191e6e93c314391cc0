#include "sum.h"

char* SUM(){

	int_least8_t num1Array[255];
	int_least8_t num2Array[255];
	int_least8_t sum[255];
	int_least8_t ac=0;
	int_least8_t bc=0;
	int_least8_t sc=0;
	int_least8_t reminder = 0;
	int_least8_t i;
	char num1[255];
	char num2[255];
	printf("First number : ");
	scanf("%s",&num1);
	printf("\nSecond number : ");
	scanf("%s",&num2);
	char *pa;  //pointer to firts number
	char *pb;  // pointer to second number

	pa=num1;
	pb=num2;

	//storing string number in the integer array
	while(*pa){  //loop untill it get null character(48)
		num1Array[ac++] = *pa++ - 48;
	}

	while(*pb){
		num2Array[bc++] = *pb++ - 48;
	}

	//number2 must be longer than number1
	if(ac<bc){
		 for(i = ac;i > 0;i--){
			 sum[sc++]= ((num1Array[i-1] + num2Array[--bc]) + reminder)%10;
			 reminder = ((num1Array[i-1] + num2Array[bc]) + reminder)/10;
		 }
		 while(bc>0){
			 sum[sc++] = num2Array[--bc] + reminder;
			 reminder = 0;
		 }
	}
	else{
		 for(i = bc;i > 0;i--){
			 sum[sc++]= ((num2Array[i-1] + num1Array[--ac]) + reminder)%10;
			reminder = ((num2Array[i-1] + num1Array[ac]) + reminder)/10;
		}
		 if(ac==0 && reminder==1)
			 sum[sc++] = reminder;
			while(ac>0){
			sum[sc++] = num1Array[--ac] + reminder;
				reminder = 0;
			}
	}
	printf("Sum of both number is : ");
	for(i=sc-1;i>=0;i--){
		 printf("%d",sum[i]);
	}
}

