#include "sum.h"


//static int_least16_t pomeraj;

int main(){

	int_least8_t sum1[] = {9, 8, 7, 6, 5};  //prvi broj
	int_least8_t sum2[] = {9, 8, 7, 6, 5};  //drugi broj

	int_least8_t sum3 = 0;  // ostatak pri sabiranju;
	int_least8_t sum4[10]={};

	int_least16_t sum[10]={};  //suma pri sabiranju

	const int_least8_t len1 = sizeof(sum1) / sizeof (int_least8_t); //poslednji
	const int_least8_t len2 = sizeof(sum2) / sizeof (int_least8_t); //poslednji
	const int_least8_t len3 = sizeof(sum) / sizeof (int_least8_t);

	int_least8_t z = 0;
	if (len1<len2){
		//dodaj nule na pocetak len 1
//		nule=len2-len1;
		printf(nule);
	/*}
	else if(len1>len2){
		//dodaj 0 na pocetak len2
		nule=len1-len12;
		printf(nule);
	}*/
	int_least8_t i;

	for (i=len1-1;i>-1;i--){

		sum[i]=sum1[i]+sum2[i]+(sum3%10);  //sabiraj od poslednjeg broja
		sum3=sum[i]/10;  //deljenje od 10 kako bi dobili deseticu koju dodajemo u sledeci
		sum4[i]=sum[i]%10;  //cifra koja se dobije kao ostatak pri deljenju
		if(sum[0]>10){
			sum4[0]=sum4[0]+10; //ako je zbir poslednja 2 veci od 10 ostavi tu 10+taj broj
		}
	}

	printf("\n");

//funkcija za printovanje
	for (i=0;i<len1;i++){
		printf("%d",sum1[i]);
	}
	printf("+");
	for (i=0;i<len1;i++){
			printf("%d",sum2[i]);
		}
	printf("==");

	for (i=0;i<len1;i++){
		if(sum[len1]>9){
					sum4[len1]=10+sum4;
				}
		printf("%d", sum4[i]);
	}

return 0;
}
