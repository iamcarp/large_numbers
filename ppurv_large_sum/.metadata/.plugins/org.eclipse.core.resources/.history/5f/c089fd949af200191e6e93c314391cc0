#include "sum.h"

#include<ctype.h>


//static int_least16_t pomeraj;

#define ARG_NUM 4

#define EXIT_SUCCESS  0
#define EXIT_FAILURE -1




int main(){
	 char number1[80];
	 char number2[80];
	int_least8t rs[80]={};
	int_least8t c1;
	int_least8t c2;
	/*
char number1[80];
char number2[80];
int rs[80];
int c1, c2;
*/
int i,j,m, cmax, sum;

printf("Enter First Number:");
scanf("%s", &number1);
printf("\nEnter Second Number:");
scanf("%s", &number2);
c1 = strlen(number1);
c2 = strlen(number2);
/*
strrev(number1);
strrev(number2);
*/
cmax = c1;
if(c1<c2){
cmax = c2;
}

m=0;
for(i=0; i< cmax; i++){
if(c1==c2 || (i < c1 && i < c2)){
sum = m+chrtoint(number1[i])+chrtoint(number2[i]);
}else if(i >=c1){
sum = m+chrtoint(number2[i]);
}else if(i >=c2){
sum = m+chrtoint(number1[i]);
}
rs[i] = sum%10;
m = sum/10;
}

if(m){
rs[i]=m;
i++;
}

printf("\nResult: ");
for(j=0; j < i; j++){
printf("%d", rs[i-j-1]);
}
return 0;
}
