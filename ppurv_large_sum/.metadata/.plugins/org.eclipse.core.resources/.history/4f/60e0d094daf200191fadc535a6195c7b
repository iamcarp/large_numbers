#include "sum.h"



const bool true = 1;
const bool false = 0;

bool isDigit(int_least8_t c)
{
	if (c >= '0' && c <= '9')
	{
		return true;
	}

	return false;
}

int_least64_t strToNum(const int_least8_t* str)
{
	int toString(char a[]) {
	  int c, sign, offset, n;

	  if (a[0] == '-') {  // Handle negative integers
	    sign = -1;
	  }

	  if (sign == -1) {  // Set starting position to convert
	    offset = 1;
	  }
	  else {
	    offset = 0;
	  }

	  n = 0;

	  for (c = offset; a[c] != '\0'; c++) {
	    n = n * 10 + a[c] - '0';
	  }

	  if (sign == -1) {
	    n = -n;
	  }

	  return n;
	}
}
