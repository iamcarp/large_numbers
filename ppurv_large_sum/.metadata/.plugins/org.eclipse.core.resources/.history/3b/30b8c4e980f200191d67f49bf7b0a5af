#include "sum.h"

void need(){

}

char* SUM(){
	int_least8_t a[255];
	int_least8_t b[255];
	int_least8_t sum[255];
	int_least8_t a_carry=0;
	int_least8_t b_carry=0;
	int_least8_t sum_carry=0;
	int_least8_t reminder = 0;
	int_least8_t i;
	const char num1[255];
	const char num2[255];
	const char *pa;  //pointer to firts number
	const char *pb;  // pointer to second number


	printf("First number : ");
	sum_carryanf("%s",&num1);
	printf("\nSecond number : ");
	sum_carryanf("%s",&num2);

	pa=num1;
	pb=num2;

	//storing string number in the integer array
	while(*pa){  //loop untill it get null chara_carryter(48)
		a[a_carry++] = *pa++ - 48;
	}

	while(*pb){
		 b[b_carry++] = *pb++ - 48;
	}

	//number2 must be longer than number1
	if(a_carry<b_carry){
		 for(i = a_carry;i > 0;i--){
			 sum[sum_carry++]= ((a[i-1] + b[--b_carry]) + reminder)%10;
			 reminder = ((a[i-1] + b[b_carry]) + reminder)/10;
		 }
		 while(b_carry>0){
			 sum[sum_carry++] = b[--b_carry] + reminder;
			 reminder = 0;
		 }
	}
	else{
		 for(i = b_carry;i > 0;i--){
			 sum[sum_carry++]= ((b[i-1] + a[--a_carry]) + reminder)%10;
			reminder = ((b[i-1] + a[a_carry]) + reminder)/10;
		}
		 if(a_carry==0 && reminder==1)
			 sum[sum_carry++] = reminder;
			while(a_carry>0){
			sum[sum_carry++] = a[--a_carry] + reminder;
				reminder = 0;
			}
	}
	printf("Sum of both number is : ");
	for(i=sum_carry-1;i>=0;i--){
		 printf("%d",sum[i]);
	}
}

